    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_background</item>
        <item name="colorPrimaryDark">@color/main_background</item>
        <item name="colorAccent">@color/list_text_title</item>

        <item name="android:textColorPrimary">@color/main_background</item>
        <item name="android:textColorSecondary">@color/title_one</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/main_background</item>

        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorControlActivated">@color/list_text_title</item>
        <item name="colorControlHighlight">@color/main_background</item>


        <!-- ActionMode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/MP.Theme.Widget.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/MP.Theme.Widget.ActionMode.CloseButton</item>

        <!-- AlertDialog -->
        <item name="alertDialogTheme">@style/MP.Theme.Widget.AlertDialog</item>


    </style>

    <style name="MP.Theme" parent="AppTheme"/>


    <!-- Widget -->

    <style name="MP.Theme.Widget"/>

    <!-- Widget - Divider -->

    <style name="MP.Theme.Widget.Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line.Vertical">
        <item name="android:layout_height">1px</item>

    </style>

    <style name="MP.Theme.Widget.Divider.Line.Horizontal">
        <item name="android:layout_width">@dimen/activity_horizontal_margin</item>
    </style>





    <style name="MP.Theme.Widget.SegmentedControl">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:button">@null</item>
    </style>

    <style name="MP.Theme.Widget.Toolbar">
        <item name="android:id">@id/main_toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/MP.Theme.TextAppearance.Light.Toolbar.Title</item>
    </style>

    <style name="MP.Theme.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/black</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="backgroundSplit">@null</item>
        <item name="titleTextStyle">@style/MP.Theme.TextAppearance.ActionMode.Title</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="MP.Theme.Widget.ActionMode.CloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="MP.Theme.Widget.AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MP.Theme.Widget.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/red</item>
        <item name="android:dropDownHorizontalOffset">-24dp</item>
    </style>

    <style name="MP.Theme.Widget.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:id">@id/progress_bar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MP.Theme.Widget.RecyclerView">
        <item name="android:id">@id/recycler_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/color_for_list</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="layoutManager">@string/layoutManager_linear</item>
    </style>



    <style name="MP.Theme.TextAppearance">

    </style>

    <style name="MP.Theme.TextAppearance.Toolbar">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MP.Theme.TextAppearance.Light.Toolbar.Title" parent="MP.Theme.TextAppearance.Toolbar">
        <item name="android:textColor">@color/title_one</item>
    </style>

    <style name="MP.Theme.TextAppearance.Light.Toolbar.SubTitle" parent="MP.Theme.TextAppearance.Toolbar">
        <item name="android:textColor">@color/selector_list_hint_text</item>
        <item name="android:textSize">@dimen/list_hint</item>
    </style>

    <style name="MP.Theme.TextAppearance.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="MP.Theme.TextAppearance.List">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="MP.Theme.TextAppearance.List.Title">
        <item name="android:textColor">@color/selector_list_title_text</item>
        <item name="android:textSize">@dimen/list_title</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Hint">
        <item name="android:textColor">@color/selector_list_hint_text</item>
        <item name="android:textSize">@dimen/list_hint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Empty">
        <item name="android:id">@id/text_view_empty</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title_one</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
